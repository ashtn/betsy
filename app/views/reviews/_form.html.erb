<div class="row">
  <fieldset class="large-6 columns">

<%= form_for @review, method: form_method, url: item_reviews_path do |f| %>

  <%= f.radio_button(:rating, 1) %>
  <%= f.label :rating, "★☆☆☆☆" %>
  <%= f.radio_button(:rating, 2) %>
  <%= f.label :rating, "★★☆☆☆" %>
  <%= f.radio_button(:rating, 3) %>
  <%= f.label :rating, "★★★☆☆" %>
  <%= f.radio_button(:rating, 4) %>
  <%= f.label :rating, "★★★★☆" %>
  <%= f.radio_button(:rating, 5) %>
  <%= f.label :rating, "★★★★★" %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.hidden_field :item_id, value: params[:id] %>

  <%= f.submit action_name, :class => "button" %>

<% end %>

  </fieldset>

</div>
