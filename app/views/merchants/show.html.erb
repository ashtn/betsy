<h1> Items by: <%= @merchant.username %>(Merchants#show)</h1>

<p>Find me in app/views/merchants/show.html.erb</p>





<section>

  <h3>testing total revenue:</h3>

  $<%= sprintf('%.2f', @merchant.revenue_by_id(@merchant.id)) %>

</section>
============================================
<section>

  <h3> Testing all_orders_by_id :</h3>

  <table>
    <thead>
      <th>
        Order Id
      </th>
      <th>
        order total
      </th>
    </thead>
    <% @merchant.all_orders_by_id(@merchant.id).each do |order| %>
    <tr>
      <td>
        <%=link_to "#{order.id}", order_path(order.id), method: :get%>
      </td>
      <td>
        $<%= sprintf('%.2f', order.total)%>
      </td>
      <%end%>
    </tr>
  </table>
</section>
