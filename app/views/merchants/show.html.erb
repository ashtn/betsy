<section>
  <h3>testing merchant_order_items method:</h3>
<table>
  <thead>
    <th>
      Item
    </th>
    <th>
      Price
    </th>
    <th>
      Qty in Stock
    </th>
    <th>
      Average Rating
    </th>
    <th>

    </th>
    <th>

    </th>
  </thead>

<% @merchant.order_items_by_id(@merchant.id).each do |order_item| %>
  <tr>
    <td>
      <%=link_to "#{Item.find(order_item.item_id).name.capitalize}", item_path(order_item.item_id), method: :get%>
    </td>
    <td>
      $<%= sprintf('%.2f', Item.find(order_item.item_id).price)%>
    </td>
    <td>
      <%= Item.find(order_item.item_id).inventory%>
    </td>
    <td>
      <%= Item.find(order_item.item_id).average_rating %>
    </td>

